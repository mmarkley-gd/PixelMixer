                    android:tag="10" />

                <TextView
                    android:visibility="@{viewModel.debugDisplayTextVisibility}"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{viewModel.positionTenTagValue}" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/row_three_column_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
