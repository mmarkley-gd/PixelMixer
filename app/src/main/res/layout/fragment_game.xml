                    android:text="@{viewModel.positionTwelveTagValue}" />
            </RelativeLayout>
            </TableRow>

            <TableRow
                android:id="@+id/row_four"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:weightSum="4">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/row_four_column_one"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/row_content"
                        android:src="@{viewModel.positionFourOneBitmap}"
                        android:tag="13" />

                    <TextView
                        android:visibility="@{viewModel.debugDisplayTextVisibility}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.positionThirteenTagValue}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/row_four_column_two"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/row_content"
                        android:src="@{viewModel.positionFourTwoBitmap}" />

                    <TextView
                        android:visibility="@{viewModel.debugDisplayTextVisibility}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.positionFourteenTagValue}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/row_four_column_three"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:contentDescription="@string/row_content"
                        android:src="@{viewModel.positionFourThreeBitmap}"
                        android:tag="15" />

                    <TextView
                        android:visibility="@{viewModel.debugDisplayTextVisibility}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.positionFifteenTagValue}" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <ImageView
                    android:id="@+id/row_four_column_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:contentDescription="@string/row_content"
                    android:src="@{viewModel.positionFourFourBitmap}"
                    android:tag="16" />

                    <TextView
                        android:visibility="@{viewModel.debugDisplayTextVisibility}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@{viewModel.positionSixteenTagValue}" />
                </RelativeLayout>
            </TableRow>
        </TableLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
